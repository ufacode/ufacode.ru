<% if user_signed_in? %>

  <%= form_for comment, html: {id: 'comment_form'} do |f| %>
    <%= f.hidden_field :parent_id %>
    <%= f.hidden_field :post_id, value: post.id %>
    <div class="form-group">
      <%= f.text_area :content, class: 'redactor', rows: 5 %>
    </div>
    <div class="form-group">
      <%= f.submit t('comments.add'), class: 'btn btn-success' %>
    </div>
  <% end %>

<% else %>
  <p>
    <%= t('comments.signin_first', signin_link: new_user_session_path, signup_link: new_user_registration_path).html_safe %>
  </p>
<% end %>